html, body {
	margin: 0;
	padding: 0;
}

.header {
	background-color: #685E6C;
	color: #fff;
	height: 100px;
	position: relative;
	padding: 20px;
}

.header-small {
	background-color: #685E6C;
	color: #fff;
	height: 30px;
	position: relative;
	display: flex;
	justify-content: left;
	content-align: center;
	padding-top: 15px;
	padding-left: 15px;

	color: #fff;
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 11px;
	font-weight: 700;
}

.nav-container{
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}

.button-bar {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	position: absolute;
	background-color: #125B4D;
	padding-right: 20px;
	padding-left: 20px;
	padding-top: 5px;
	padding-bottom: 5px;
	text-align: center;
	top: -40px;


}

.empty-state{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}


.purple{
	color: #685E6C;
	font-size: 14px;
	font-weight: bold;
	padding-top: 100px;

}

p{
	color: #685E6C;
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 14px;
	text-align: center;
}

.placeholder-text{
	color: #fff;
}

h1{
	color: #fff;
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 14px;
	margin: 0px;
	text-align: center;
	padding-top: 20px;
	font-weight: 700;
}

h2{
	color: #fff;
	font-family: 'Alice', serif;
	font-weight: 400;
	font-size: 28px;
	text-align: center;
	padding: 0px;
	margin: 0px;
}

.tea-title{
	font-family: 'Alice', serif;
	font-size: 34px;
	color: #000;
	text-align: left;
}

.tea-details{
	color: #125B4D;
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 12px;
	font-weight: 700;
}

.icon{
	width: 40px;
	padding: 5px;
}

a.upper-underlined-green{
	color: #125B4D;
	font-family: 'Source Sans Pro', sans-serif;
	text-transform: uppercase;
	font-weight: 700;
	font-size: 12px;
}

ul{
	list-style-type: none;
	padding-left: 0;
	text-transform: uppercase;
}


.body-copy{
	text-align: left;
	font-size: 16px;
}

.preview-body-copy{
	font-size: 14px;
	text-align: left;
}

.tea-header-tag {
	color: #FFFFFF;
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 12px;
	text-transform: uppercase;
	font-weight: 700;
	display: inline-block;
	padding: 4px 8px;
	background-color: #125B4D;
	margin-bottom: 20px;
}

.tea-preview{
	width: 300px;
	padding: 10px;
	z-index: 1;
}

.tea-preview-block{
	position: relative;
	margin-top: 200px;
	margin-left:10px;

}

.tea-preview-photo{
	position: absolute;
	display: inline-block;
	z-index: 0;
	margin-left: 80px;
	margin-top: 100px;
}

.tea-preview-sketch{
	position: absolute;
	display: inline-block;
	z-index: -1;
	margin-left: 0px;
	padding-top: 20px;
}

.preview-hero-sketch{
	width: 180px;
	opacity: 0.5;
}
.preview-hero-img{
	width: 220px;
}


.tea-overview-container{
	display: flex;
	justify-content: center;
	margin: 50px;
}

.tea-overview-content{
	width: 360px;
	margin: 20px;
	order: 1;
}

.tea-overview-image-block{
	width: 400px;
	padding: 10px;
	position: relative;
	order: 2;
}

.img-overview-one{
	position: absolute;
	z-index: 0;
	max-width: 72%;
	margin-top: 340px;
	margin-left: 150px;

}

.img-overview-two{
	position: absolute;
	z-index: 1;
	max-width: 100%;
	margin-left: 250px;
	margin-top: 10px;
}

.sketch-overview{
	position: absolute;
	max-width: 85%;
	opacity: 0.5;
	z-index: -1;
}
